{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "./src",
        "baseUrl": "src",
        "outDir": "dist",
        "incremental": true,
        "removeComments": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noEmit": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types",
            "src/entities",
        ],
        "paths": {
            "@middleware/*": [
                "middleware/*"
            ],
            "@entities/*": [
                "entities/*"
            ],
            "@controllers/*": [
                "controllers/*"
            ],
            "@helpers/*": [
                "helpers/*"
            ],
            "@constants/*": [
                "constants/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@queries/*": [
                "queries/*"
            ],
            "*": [
                "*",
                "src/*",
                "../src/*",
                "./src/*"
            ]
        },
    },
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "CommonJS"
        },
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "ignore": [
        "deploy"
    ]
}